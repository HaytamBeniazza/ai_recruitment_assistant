# RecruitAI Pro - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =================================
# OpenAI Configuration (Optional but Recommended)
# =================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# =================================
# Database Configuration
# =================================
DATABASE_URL=sqlite:///./recruitment.db
# For production use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/recruitment_db

# =================================
# Redis Configuration (Optional)
# =================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =================================
# Email Configuration (Optional)
# =================================
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM_NAME=RecruitAI Pro
EMAIL_FROM_ADDRESS=noreply@recruitaipro.com

# =================================
# SMS Configuration (Optional)
# =================================
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890

# =================================
# Application Settings
# =================================
APP_ENV=development
APP_DEBUG=true
APP_HOST=localhost
APP_PORT=8000
APP_RELOAD=true

# =================================
# Security Settings
# =================================
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_EXPIRATION_HOURS=24

# =================================
# Agent Configuration
# =================================
RESUME_ANALYZER_ENABLED=true
SCHEDULER_ENABLED=true
COMMUNICATION_ENABLED=true
DASHBOARD_ENABLED=true

# =================================
# Feature Flags
# =================================
ENABLE_AI_ANALYSIS=true
ENABLE_AUTO_SCHEDULING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_REAL_TIME_ANALYTICS=true 